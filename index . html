<script>
const limits={1:1000,2:2000,3:3000,4:4000,5:5000,6:6000};
const priceMap={
    inr: "₹500 – ₹3000", npl: "800 – 4800 NPR",
    usa: "$25 – $150 USD", uk: "£20 – £120 GBP", can: "35 – 210 CAD", eur: "25 – 150 EUR", aus: "40 – 240 AUD",
    uae: "110 – 660 AED", sgp: "35 – 210 SGD", jpn: "3800 – 22k JPY"
};

const tier=document.getElementById("tierSelect");
const box=document.getElementById("questionBox");
const counter=document.getElementById("charCounter");
const currencyToggle = document.getElementById("currencyToggle");
const indianPayment = document.getElementById("indianPayment");

tier.onchange=()=>{ box.maxLength=limits[tier.value]; counter.textContent=limits[tier.value]+" characters remaining"; };
box.oninput=()=>{ counter.textContent=(box.maxLength-box.value.length)+" characters remaining"; };

currencyToggle.onchange=(e)=>{
    document.getElementById("priceDisplay").textContent = "Rate: " + priceMap[e.target.value];
    // Hide Indian payment options if not INR
    if(e.target.value === 'inr') {
        indianPayment.style.display = "block";
    } else {
        indianPayment.style.display = "none";
    }
};

const ist = new Date(new Date().toLocaleString("en-US", {timeZone: "Asia/Kolkata"}));
const open = ist.getDay() === 0 && ist.getHours() >= 10 && ist.getHours() < 12;
// const open = true; // For testing

if(!open) {
    document.getElementById("bookBtn").disabled = true;
    document.getElementById("lockMessage").textContent = "The Sanctuary is currently closed. Bookings open Sunday at 10:00 AM IST.";
}

document.getElementById("bookBtn").onclick=()=>{
    if(!document.getElementById("clientName").value) { alert("Please enter your name to proceed."); return; }
    document.getElementById("conductModal").style.display="flex";
    const msg = `SANTUARY%20BOOKING%0AName:%20${document.getElementById("clientName").value}%0ALevel:%20${tier.value}%0A%0AI%20agree%20to%20the%20Sanctuary%20Conduct.`;
    document.getElementById("waLink").href="https://wa.me/910000000000?text=" + msg;
};
</script>
